@model Todo

<form asp-controller="Home" asp-action="Edit" method="POST">
    <div class="form-group mt-2">
        <label asp-for="Id"></label>
        <input asp-for="Id" type="text" class="form-control mt-2" readonly>
    </div>
    <div class="form-group mt-2" hidden>
        <label asp-for="UserId"></label>
        <input asp-for="UserId" type="text" class="form-control mt-2" readonly>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control mt-2">
    </div>
    <div class="form-check mt-2">
        <input type="checkbox" class="form-check-input" asp-for="IsCompleted">
        <label class="form-check-label" asp-for="IsCompleted">Completed</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>